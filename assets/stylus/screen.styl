// reset
@import 'reset';
// font
@import 'font';
// media
@import 'mediaquery';

color-bg = #fafcfc
color-white = #fff
color-font = #333
color-dark = #666
color-gray = #d1d5d5
color-light-gray = #e1e5e5

html
    min-height 100%
    height 100%
    overflow auto
    font-size 10px

body
    height 100%
    font-size 14px
    color color-font
    background color-bg

for i in range(1, 6, 1)
    h{i}
        font-size 30px - 2px * i

a
    color color-font
    text-decoration none
    &:hover
        color #666
    &:focus
        outline 1px dotted color-font

pre
    padding 10px
    border-left 6px solid color-light-gray
    background color-bg

/* layout */
.layout
    width 1200px
    margin 0 auto
    background #fff
    min-height 100%
    overflow hidden

.m-aside
    width 300px
    float left
    font 14px/1.7 quicksand, sans-serif
    background color-bg
    height 100%
    position relative
    z-index 100
    .aside-wrap
        padding-left 20px
        padding-right 40px

.m-main
    padding-top 10px
    padding-bottom 20px
    width 900px
    float left
    border-left 300px solid color-bg
    margin-left -300px

.l-bg
    position fixed
    right 0
    left 50%
    top 0
    bottom 0
    background color-white
    z-index -1

@media large
    .layout
        width 100%

    .m-aside
        width 23%

    .m-main
        width 70%
        border 0
        margin-left 0

@media small
    .m-aside
    .m-main
        float none
        width 100%
    
    .m-aside
        text-align center
        .side-hd
        ul
            display none

/* default */
.m-aside
    .blog-header
        padding-top 20px

        .blog-desc
            color color-dark
            font-size 12px

    .side-hd
        position relative
        font-size 16px
        font-weight 700
        text-transform capitalize
        &:after
            position absolute
            left -8px
            bottom 11px
            content ''
            display block
            width 40px
            height 7px
            background #f1f1f1
            z-index 0

    .inner
        position relative
        padding-bottom 5px
        display inline-block
        z-index 1

    .copyright
        margin-top 10px
        font-size 12px
        .copy
            display inline-block
            padding-top 5px
            border-top 1px solid #ededed

    .post-count
        margin-left 5px
        font-size 12px

.blog-title
    font-size 20px
    span
        color color-font
        display inline-block
        position relative
        -webkit-transform perspective(1000px) rotate3d(0,1,0,0deg)
        transform perspective(1000px) rotate3d(0,1,0,0deg)
        -webkit-transition -webkit-transform 0.3s
        transition transform 0.3s
        for i in range(1,12,1)
            &:nth-child({i})
                -webkit-transition-delay 0.1s * i
                transition-delay: 0.1s * i

    &:hover span
        color #1e1a1b
        -webkit-transform perspective(1000px) rotate3d(0,1,0,360deg)
        transform perspective(1000px) rotate3d(0,1,0,360deg)


/* post */

.post
    position relative
    padding 20px 20px 20px 130px

    .meta
        position absolute
        left 40px
        top 50px
        font-family quicksand, sans-serif

    .image-holder img
        max-width 100%

    .post-text img
        max-width 100%

    .home-link
    .read-more
        font-family quicksand, sans-serif
        font-size 14px

    .read-more
        display inline-block
        margin-top 20px


.post-author
    padding-bottom 15px
    text-align center

.post-author-avatar
    height 50px
    width 50px
    border-radius 50%

.post-date-day
.post-date-month
.post-date-year
    display block
    color color-gray
    text-align center

.post-date-month
    font-size 30px
    font-weight 700

.post-header
    font-size 26px

.post-tags
    .icon
        margin-right 10px
        color color-gray
    a
        font-size 14px
        color color-gray

.post-text
    font-size 14px
    line-height 1.8

.post-footer
    margin 60px 0
    padding 10px 20px
    background color-bg

    .photo
        height 80
        width 80
        border-radius 50%

    .details
        margin-left 100px
        min-height 80px

        h4
            margin 10px 0 10px

        .url
            font-size 18px

.post-nav
    padding 20px 0
    border 1px dashed #f3f3f3
    border-left 0
    border-right 0
    margin 0 20px 0 130px

    .post-nav-next
        float right
        text-align right

    .post-nav-prev
        float left

    .post-nav-next
    .post-nav-prev
        width 50%

    .post-next
    .post-prev
        text-decoration underline

.post-comment
    padding 20px
    margin-left 130px

.loop-page
    padding 20px

    .btn
        display inline-block
        padding 3px 5px

    .next
        float right

    .prev
        float left

.page-banner
    padding-left 130px

.scroll-nav
    position fixed
    top 100px
    left 50%
    margin-left 600px
    padding 10px
    border-left 6px solid color-bg
    font-family quicksand, sans-serif
    
    .scroll-nav__heading
        text-transform uppercase

.scroll-nav__list
    padding-left 10px
    line-height 1.8

.scroll-nav__item.in-view:after
    content ''
    display block
    height 0
    width 0
    border 4px solid transparent
    border-left-color color-gray
    position absolute
    margin-left: -10px
    margin-top: -17px


